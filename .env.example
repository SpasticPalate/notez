# Notez Environment Variables
# Copy this file to .env and fill in the values

# ── Database ──────────────────────────────────────────────
POSTGRES_USER=notez
POSTGRES_PASSWORD=          # Required — strong random password
POSTGRES_DB=notez

# ── Authentication ────────────────────────────────────────
JWT_ACCESS_SECRET=          # Required — openssl rand -base64 32
JWT_REFRESH_SECRET=         # Required — openssl rand -base64 32
ENCRYPTION_KEY=             # Required — openssl rand -base64 32
COOKIE_SECRET=              # Optional — defaults to JWT_REFRESH_SECRET

# ── MinIO (S3-compatible storage) ─────────────────────────
MINIO_ACCESS_KEY=notez
MINIO_SECRET_KEY=           # Required — strong random password

# ── Email (password reset) ────────────────────────────────
RESEND_API_KEY=             # Optional — enables password reset emails
EMAIL_FROM=noreply@example.com

# ── Application ───────────────────────────────────────────
APP_NAME=Notez
APP_URL=https://notez.example.com
CORS_ORIGIN=https://notez.example.com

# ── Storage paths ─────────────────────────────────────────
DATA_DIR=/opt/notez         # Host directory for persistent data
